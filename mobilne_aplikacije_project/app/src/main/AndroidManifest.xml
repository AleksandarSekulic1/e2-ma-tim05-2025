<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Dozvole za QR kod scanner -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- Dozvole za notifikacije -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- QR kod aktivnosti -->
        <activity
            android:name=".activities.QRScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApplication" />
        
        <activity
            android:name=".activities.QRDisplayActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.game.CreateMissionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.game.MissionDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.game.AllianceMissionActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity android:name=".ui.categories.CategoriesActivity" />
        <activity android:name=".ui.tasks.TasksActivity" />
        <activity android:name=".ui.tasks.CreateEditTaskActivity" />
        <activity android:name=".ui.game.BossFightActivity" />
        <activity android:name=".ui.calendar.TasksCalendarActivity" />
        <activity android:name=".ui.tasks.TaskDetailActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.StatisticsActivity" />
        <activity android:name=".ui.ActivateAccountActivity" />
        <activity android:name=".ui.ShopActivity" />
        <activity android:name=".ui.EquipmentActivity" />
        <activity android:name=".ui.BossBattleActivity" />
        
        <!-- Social system aktivnosti -->
        <activity android:name=".activities.FriendsActivity"
            android:exported="false" />
        <activity android:name=".activities.AllianceActivity"
            android:exported="false" />
        <activity android:name=".activities.ChatActivity"
            android:exported="false" />
    </application>

</manifest>