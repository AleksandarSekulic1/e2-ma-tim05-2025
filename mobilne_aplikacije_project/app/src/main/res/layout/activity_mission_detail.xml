<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.game.MissionDetailActivity">

    <TextView
        android:id="@+id/textViewDetailMissionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        tools:text="Napad na Zmajevu Tvrđavu" />

    <TextView
        android:id="@+id/textViewStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="Započeto: 02.09.2025" />

    <TextView
        android:id="@+id/textViewMissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="Status: Aktivna" />

    <TextView
        android:id="@+id/textViewMissionBossHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        tools:text="HP Bosa: 250 / 300" />

    <ProgressBar
        android:id="@+id/progressBarMissionBoss"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        tools:progress="83" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj članova saveza:" />
        <EditText
            android:id="@+id/editTextAllianceMembers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_marginStart="8dp"
            tools:text="3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/buttonActionShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Kupovina (Danas: 0/5)" />

        <Button
            android:id="@+id/buttonActionHardTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Težak zadatak (Danas: 0/2)" />
    </LinearLayout>
</LinearLayout>