<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header sa novčićima -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/coinsDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novčići: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gold" />

    </LinearLayout>

    <!-- ScrollView za ceo sadržaj -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sekcija za napitke -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🧪 NAPICI"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="8dp" />

            <ListView
                android:id="@+id/potionsListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="4dp" />

            <!-- Sekcija za odeću -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👕 ODEĆA"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="8dp" />

            <ListView
                android:id="@+id/clothingListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="4dp" />

            <!-- Napomena o oružju -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚔️ Oružje se može dobiti samo pobedama nad bosovima!"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/secondary"
                android:padding="16dp"
                android:background="@color/info_background"
                android:layout_marginTop="16dp"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>